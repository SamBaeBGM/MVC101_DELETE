@{
    ViewData["Title"] = "Files Page";
    var files = ViewBag.Files as string[];
}

<div class="text-center">
    <h1 class="display-4" style="color: tomato;">Files to be added</h1>


</div>

<div>
    <ul>
        @foreach(var item in files!) {
            <li><a asp-controller="Files" asp-action="Content" asp-route-id="@item">@item</a></li>
        }
    </ul>

</div>
